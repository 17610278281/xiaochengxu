/**index.wxss**/
.task-main {
  width: 100%;
  min-height: 100vh;
  padding: 0rpx 30rpx 20rpx;
  box-sizing: border-box;
  background-color: #F2F2F2;
}
.header {
  width: 100%;
  line-height: 92rpx;
  font-size: 28rpx; 
  color: #333;
}
.task-list {
  width: 100%;
}
.task-item {
  width: 100%;
  padding: 46rpx 36rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  position: relative; 
}
.item-3 {
  border-left: 12rpx solid #4cc760; 
}
.item-3 span {
  background-color: #4cc760;
}
.item-2 {
  border-left: 12rpx solid #5bb0ff;
}
.item-2 span {
  background-color: #ffc21f;
}
.item-1 {
  border-left: 12rpx solid #ffc21f;
}
.item-1 span {
  background-color: #5bb0ff;
}
.item-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 60rpx;
}

.item-content {
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx; 
}
image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin: .06rem .18rem 0 0;
  vertical-align: middle;
}

.subSubject {
  position: absolute;
  top: 0;
  right: 41rpx;
  width: 40rpx;
  height: 44rpx;
  border-radius: 0 0 7rpx 7rpx;
  text-align: center;
  line-height: 44rpx;
  color: #fff;
  font-size: 25rpx;
}
